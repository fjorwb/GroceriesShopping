{
  "scripts": {
    "start": "node server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --runInBand --forceExit",
    "dev": "nodemon server.js",
    "nodeversion": "node -v",
    "make-migrate": "npx sequelize-cli model:generate --name users",
    "migrate": "npx sequelize-cli db:migrate",
    "make-seed": "npx sequelize-cli seed:generate --name demo-user",
    "undo-migrate": "npx sequelize-cli db:migrate:undo:all",
    "seed": "npx sequelize-cli db:seed:all",
    "undo-seed": "npx sequelize-cli db:seed:undo:all",
    "re-seed": "npm run undo-seed && npm run seed",
    "db-re-start": "npm run undo-migrate && npm run migrate && npm run seed",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "make-mockdata": "node ./MockData/makemock.js"
  },
  "name": "groceriesshopping",
  "version": "1.0.0",
  "description": "Project for Codecademy's BEE Career Path",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "groceries-shopping"
  },
  "keywords": [
    "backend",
    "node",
    "sequelize",
    "postgresql"
  ],
  "author": "fjorwb",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.3",
    "body-parser": "^1.20.1",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-ejs-layouts": "2.5.1",
    "express-validator": "^7.3.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "1.10.0",
    "pg": "8.8.0",
    "pg-hstore": "2.3.4",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "6.2.5",
    "swagger-ui-express": "4.6.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "8.41.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "16.0.0",
    "eslint-plugin-promise": "6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "2.8.8",
    "sequelize-cli": "6.5.2",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "globalTeardown": "<rootDir>/tests/teardown.js"
  }
}
